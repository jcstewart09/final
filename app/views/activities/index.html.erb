<% all_activities = Activity.read %>

<h2>Check out the Workout Activities You Can do Around Evanston! </h2>

<ul>

  <% all_activities.each do |activity| %>

    <li>
      <%= link_to activity["activity"], "/activities/#{activity["id"]}" %>
   </li>

  <% end %>

</ul>

      <% all_activities.each do |activity| %>
      <%= link_to image_tag activity["photo_url"], "width" => "240" %>

<% end %>
